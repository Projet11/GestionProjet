<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>be.esi.projet11.gestionprojet.controller.FrontController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/FrontController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>FrontController</welcome-file>
    </welcome-file-list>
    <ejb-local-ref>
        <ejb-ref-name>TacheEJB</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <local>be.esi.projet11.gestionprojet.ejb.TacheEJBLocal</local>
        <ejb-link>TacheEJB</ejb-link>
    </ejb-local-ref>
</web-app>
