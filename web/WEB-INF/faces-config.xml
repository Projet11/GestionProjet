<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">
    <managed-bean>
        <managed-bean-name>membreManage</managed-bean-name>
        <managed-bean-class>be.esi.projet11.gestionprojet.ejb.MembreManage</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/pages/FormAttribMembre.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/Tache.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/pages/FormAttribMembre.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/creeTache.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/accueil.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>annuler</from-outcome>
            <to-view-id>/pages/accueil.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/pages/creeTache.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/afficherTaches.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/afficherTaches.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/accueil.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>creeTache</from-outcome>
            <to-view-id>/pages/creeTache.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/accueil.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>modificationTache</from-outcome>
            <to-view-id>/pages/MarqueTache.xhtml</to-view-id>
                        <redirect/>

        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/connexion.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/accueil.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/pages/connexion.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <converter>
        <converter-for-class>java.lang.Enum</converter-for-class>
        <converter-class>javax.faces.convert.EnumConverter</converter-class>
    </converter>
    <navigation-rule>
        <from-view-id>/pages/MarqueTache.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>retourneAccueil</from-outcome>
            <to-view-id>/pages/accueil.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/accepterProjet.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/accepterProjet.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/pages/accepterProjet.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/AjoutMembreProjet.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ajouter</from-outcome>
            <to-view-id>/pages/AjoutMembreProjet.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/accepterTache.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/accepterTache.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/pages/accepterTache.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/refuserTache.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/refuserTache.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/pages/refuserTache.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
